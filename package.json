{
  "name": "css-style-editor",
  "version": "0.0.1",
  "description": "a form that generate css styles or CSSProperties",
  "main": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "example": "cd ./example && npm run dev",
    "dev": "rollup -c --watch",
    "build": "rollup -c",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "eslint 'src/**/*.{ts,tsx}'",
    "lint:style": "stylelint 'src/**/*.{css,scss,less}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss}'",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "peerDependencies": {
    "@ant-design/icons": "^5.3.7",
    "antd": "^5.19.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/lodash": "^4.17.6",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-import": "^1.13.8",
    "eslint": "^8.57.0",
    "eslint-config-lvmcn": "^0.0.59",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json": "^4.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "less": "^4.2.0",
    "postcss-less": "^6.0.0",
    "prettier": "^3.3.2",
    "rollup": "^2.79.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "8.0.0",
    "stylelint-config-standard": "29.0.0",
    "stylelint-less": "^1.0.6",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "4.3.0",
    "tslint": "^6.1.3",
    "typescript": "^5.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helloqian12138/react-style-editor.git"
  },
  "keywords": [
    "style",
    "editor"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --fix",
      "stylelint --fix",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "author": "helloqian12138",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helloqian12138/react-style-editor/issues"
  },
  "homepage": "https://github.com/helloqian12138/react-style-editor#readme",
  "directories": {
    "example": "example"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "lodash": "^4.17.21"
  }
}
